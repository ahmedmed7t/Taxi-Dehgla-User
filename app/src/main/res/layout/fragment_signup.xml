<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.crazynet.taxidegeluser.UI.log_sign.signupFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/sign_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:textColor="@color/darkGray"
        android:background="@drawable/white_button"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:paddingLeft="23dp"
        android:fontFamily="@font/gibsonsemibold"
        />

    <EditText
        android:id="@+id/sign_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:textColor="@color/darkGray"
        android:background="@drawable/white_button"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toBottomOf="@id/sign_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:paddingLeft="23dp"
        android:fontFamily="@font/gibsonsemibold"
        />

    <EditText
        android:id="@+id/sign_Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColor="@color/darkGray"
        android:background="@drawable/white_button"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toBottomOf="@id/sign_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:paddingLeft="23dp"
        android:fontFamily="@font/gibsonsemibold"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/usePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usePhone"
        app:layout_constraintTop_toBottomOf="@id/sign_Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="39dp"
        android:textColor="@color/darkGray"
        />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/goldbutton"
        android:text="@string/contin"
        android:textColor="@color/white"
        android:fontFamily="@font/gibsonsemibold"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintTop_toBottomOf="@id/usePhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="8dp"
        />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
