<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.crazynet.taxidegeluser.UI.profileFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">
    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/blackback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="37dp"
        android:textColor="#454F63"
        android:fontFamily="@font/gibsonsemibold"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        app:layout_constraintTop_toBottomOf="@id/prof"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#F4F4F6"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            android:layout_marginTop="22dp"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/person"/>
        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gibsonregular"
            android:textColor="#78849E"
            android:textSize="14dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AurÃ©lien"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gibsonsemibold"
            android:textColor="#454F63"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Name"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gibsonregular"
            android:textColor="#78849E"
            android:textSize="14dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salomon"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gibsonsemibold"
            android:textColor="#454F63"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gibsonregular"
            android:textColor="#78849E"
            android:textSize="14dp"
            android:layout_marginTop="35dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@mipmap/iraq"
                android:layout_marginRight="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textColor="#454F63"
                android:fontFamily="@font/gibsonsemibold"
                android:textSize="14dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(324) 242-2457"
                android:textColor="#454F63"
                android:fontFamily="@font/gibsonsemibold"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gibsonregular"
            android:textColor="#78849E"
            android:textSize="14dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salomon@gmail.com"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gibsonsemibold"
            android:textColor="#454F63"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

</LinearLayout>
